<div class="row">
	<div class="col-sm-12">
		<table style="width: 50%" class="table table-striped">
			<th colspan="2">Users</th>
			<% @users.each do |user| %>
			<tr>
				<td>
				<a href="/users/<%= user.id %>"><%= user.name %></a>
				</td>
				<td>
				<%= link_to "Edit", edit_user_url(user), class: 'btn btn-default' %>
				<%= link_to "Delete", user_url(user), method: :delete, class: 'btn btn-default', data: {confirm: "Are you sure?"} %>
				</td>
			</tr>
		<% end %>
		</table>
		<%= link_to "New user", new_user_url(@users), class: 'btn btn-default' =%>
	</div>
</div>