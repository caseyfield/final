<% if @item.errors.any? %>
  <div class="alert alert-warning" role="alert">
    <% @item.errors.full_messages.each do |message| %>
      <%= message %><br>
    <% end %>
  </div>
<% end %>

<%= form_for @item do |form| %>
	<div class="form-group">
		<%= form.label :name %>
		<%= form.text_field :name, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= form.label :city_id %>
		<%= form.collection_select(:city_id, City.all, :id, :name, {}, { class: "form-control" }) %>
	</div>
	<div class="form-group">
		<%= form.label :category_id %>
		<%= form.collection_select(:category_id, Category.all, :id, :name, {}, { class: "form-control" }) %>
	</div>
	<div class="form-group">
		<%= form.label :condition_id %>
		<%= form.collection_select(:condition_id, Condition.all, :id, :name, {}, { class: "form-control" }) %>
	</div>
	<div class="form-group">
		<%= form.label :description %>
		<%= form.text_area :description, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= form.label :selling_url %>
		<%= form.text_field :selling_url, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= form.label :image %>
		<%= form.text_field :image, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= form.label :price %>
		<%= form.text_field :price, class: "form-control" %>
	</div>
	<%= form.button 'Submit', class: "btn btn-success" %>
<% end %>